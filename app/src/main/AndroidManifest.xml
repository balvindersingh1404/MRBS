<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.roombooking.roombooking">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".sharedPreferences.MRBSApplication"
        android:allowBackup="true"
        android:icon="@drawable/mrbslogo"
        android:label="MRBS"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".landing.LandingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.LoginActivity" />
        <activity android:name=".register.RegisterActivity" />
        <activity android:name=".roomDetail.RoomDetailActivity" />
        <activity android:name=".roomList.RoomListingActivity" />
        <activity android:name=".roomBooking.RoomBookingActivity" />
        <activity android:name=".myBookings.MyBookingActivity"></activity>
    </application>

</manifest>